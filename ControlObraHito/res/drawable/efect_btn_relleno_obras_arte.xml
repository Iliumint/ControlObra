<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
     <!-- Imagen cuando el foco esta sobre el boton -->
    <item 
        android:state_focused="true" 
        android:state_pressed="false" 
        android:drawable="@drawable/rellenod_de_obras_de_arte2" />

    <!-- Imagen cuando se mantiene presionado el boton -->
    <item android:state_focused="true" 
        android:state_pressed="true" 
        android:drawable="@drawable/rellenod_de_obras_de_arte2" />

    <!-- Imagen que se muestra cuando se toca el boton -->
    <item android:state_focused="false" 
        android:state_pressed="true" 
        android:drawable="@drawable/rellenod_de_obras_de_arte2" />

    <!-- Imagen que se muestra en el boton permanente -->
    <item android:drawable="@drawable/rellenod_de_obras_de_arte1" />  

</selector>
